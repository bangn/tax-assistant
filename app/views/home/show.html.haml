%section.flex.flex-col.items-center.justify-center.py-12.px-4
  %h2
    %img.w-16.h-16{ src: "https://cdn.auth0.com/styleguide/1.0.0/img/badge.svg" }
  %h1.text-4xl.font-bold.mt-4.mb-6 Your tax assistant
  - unless session[:userinfo].present?
    = button_to 'Login', '/auth/auth0',
      method: :post,
      class: 'bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-6 rounded-lg text-lg transition-colors duration-200',
      id: 'qsLoginBtn' 