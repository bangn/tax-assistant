<div class="max-w-4xl mx-auto p-4 space-y-6">
  <%# Header Section %>
  <div class="flex items-center justify-between">
    <h1 class="text-2xl font-bold">Receipt Manager</h1>
    <div class="flex gap-2">
      <%= button_to export_receipts_path, method: :get, class: "inline-flex items-center px-3 py-2 text-sm font-medium rounded-md text-gray-700 bg-white border border-gray-300 hover:bg-gray-50" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
          <polyline points="14 2 14 8 20 8"></polyline>
          <line x1="16" y1="13" x2="8" y2="13"></line>
          <line x1="16" y1="17" x2="8" y2="17"></line>
          <polyline points="10 9 9 9 8 9"></polyline>
        </svg>
        Export
      <% end %>
    </div>
  </div>

  <%# Upload Section %>
  <div class="bg-white rounded-lg border shadow-sm">
    <div class="p-4 border-b">
      <h2 class="text-lg font-semibold">Upload Receipt</h2>
      <p class="text-sm text-gray-600">Upload a receipt image or take a photo</p>
    </div>
    <div class="p-4">
      <div class="flex gap-4">
        <div class="flex-1">
          <%= form_with(url: receipts_path, local: true, class: "flex-1") do |f| %>
            <label class="flex flex-col items-center p-4 border-2 border-dashed rounded-lg cursor-pointer hover:bg-gray-50">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 mb-2 text-gray-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                <polyline points="17 8 12 3 7 8"></polyline>
                <line x1="12" y1="3" x2="12" y2="15"></line>
              </svg>
              <span class="text-sm text-gray-600">Drop files or click to upload</span>
              <%= f.file_field :image, class: "hidden", accept: "image/*", data: { action: "change->receipt#upload" } %>
            </label>
          <% end %>
        </div>
        <div class="flex-1">
          <%= button_to capture_receipts_path, method: :get, class: "w-full h-full flex items-center justify-center px-4 py-4 border rounded-lg text-gray-700 bg-white hover:bg-gray-50" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"></path>
              <circle cx="12" cy="13" r="4"></circle>
            </svg>
            Take Photo
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <%# Search and Filter Section %>
  <div class="flex gap-4">
    <div class="flex-1">
      <%= form_with(url: receipts_path, method: :get, local: true, class: "relative") do |f| %>
        <svg xmlns="http://www.w3.org/2000/svg" class="absolute left-3 top-1/2 transform -translate-y-1/2 w-4 h-4 text-gray-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="11" cy="11" r="8"></circle>
          <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
        </svg>
        <%= f.text_field :search, value: params[:search], class: "w-full pl-10 pr-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "Search receipts..." %>
      <% end %>
    </div>
    <div class="flex-1">
      <%= form_with(url: receipts_path, method: :get, local: true) do |f| %>
        <%= f.date_field :date, value: params[:date], class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <% end %>
    </div>
  </div>

  <%# Receipts List %>
  <div class="space-y-4">
    <% @receipts.each do |receipt| %>
      <div class="bg-white rounded-lg border shadow-sm">
        <div class="p-4">
          <div class="flex justify-between items-center">
            <div>
              <h3 class="font-semibold"><%= receipt.vendor %></h3>
              <p class="text-sm text-gray-600"><%= receipt.category %></p>
            </div>
            <div class="text-right">
              <p class="font-semibold">$<%= number_with_precision(receipt.amount, precision: 2) %></p>
              <p class="text-sm text-gray-600"><%= receipt.date.strftime("%Y-%m-%d") %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%# Stimulus Controller %>
<% content_for :javascript do %>
  <script>
    import { Controller } from "@hotwired/stimulus"

    export default class extends Controller {
      upload(event) {
        const file = event.target.files[0]
        if (file) {
          const formData = new FormData()
          formData.append('receipt[image]', file)

          fetch('/receipts', {
            method: 'POST',
            body: formData,
            headers: {
              'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
            }
          })
          .then(response => response.json())
          .then(data => {
            if (data.success) {
              window.location.reload()
            }
          })
        }
      }
    }
  </script>
<% end %>
