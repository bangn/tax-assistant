.max-w-4xl.mx-auto.p-4.space-y-6
  .flex.items-center.justify-between
    %h1.text-2xl.font-bold Add Receipt
  .space-y-4
    .container.mx-auto.border.p-4
      = render 'new_receipt_form'
    .container.mx-auto.border.p-4
      %h1.text-2xl.font-bold Your receipts
      = form_tag(receipts_path, method: 'get') do
        .flex.items-center.justify-between
          = text_field_tag :search, params[:search], placeholder: 'Search receipts'
          = date_field_tag :date, params[:date]
          = submit_tag 'Search', class: 'btn btn-primary'
      - @receipts.each do |receipt|
        .bg-white.rounded-lg.border.shadow-sm.mt-5
          .p-4
            .flex.justify-between.items-center
              %div
                %h3.font-semibold= receipt.seller
                %p.text-sm.text-gray-600= receipt.description
              .text-right
                %p.font-semibold
                  $#{number_with_precision(receipt.total_amount, precision: 2)}
                %p.text-sm.text-gray-600= receipt.date.strftime("%Y-%m-%d")
